<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WWWApp.AboutPage" Title="About">
	<ContentPage.Content>
	  <StackLayout VerticalOptions="CenterAndExpand">
		<Label Text="The World Wide Weather App v1.0"
        	HorizontalOptions="Center"
        	FontSize="Large" />
		<Label Text="Written by Mike Gray"
        	HorizontalOptions="Center"
        	FontSize="Medium" />

		<Label Text=" " />
		<Label Text=" " />

		<Label Text="Weather information provided by" HorizontalOptions="Center"/>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
		<Button Text="openweathermap.org" Command="{Binding DisplayWeatherMapCommand}" FontSize="Medium" Grid.Row="0" Grid.Column="1" />
		</Grid>
		<Label Text=" " />
		<Label Text=" " />

		<Label Text="Timezone information provided by" HorizontalOptions="Center" />
		<Label Text="google maps" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold"/>

	  </StackLayout>
	</ContentPage.Content>
</ContentPage>
